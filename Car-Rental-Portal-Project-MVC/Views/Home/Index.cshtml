@using Car_Rental_Portal_Project_MVC.Models.ViewModels.Car;
@using Microsoft.AspNetCore.Mvc.Rendering
@model List<GetCarViewModel>
@{
    ViewData["Title"] = "Home";
}
<div style="background: linear-gradient(to right, #010621, #1C2340)">
    <div class="container text-center MAINPAGECONTAINER" style="background: linear-gradient(to right, #03092a, #121934)">

        <div class="row justify-content-center">
            <div class="col-12" style="color:darkorange">
                <h1 class="display-4">Car Rental</h1>
            </div>
        </div>

        <hr class="my-4" style="color:darkorange" />

        <div class="row justify-content-center">
            <div class="rounded-2 col-md-10 bg-dark text-white p-2">
                <partial name="_CarFilterPartial" model="new CarFilterViewModel() {CarsToFilter = Model}" />
            </div>
        </div>

        <hr class="my-4" style="color:darkorange" />

        <div class="row justify-content-center">
            <partial name="CarCard_Partial" model="Model" />
        </div>
    </div>
</div>



