@using Car_Rental_Portal_Project_MVC.Models.ViewModels.Car;
@model GetCarViewModel

<form asp-controller="Car" asp-action="DeleteCar" class="form-control" method="post" class="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <input asp-for="UserId" hidden />
        <input asp-for="ApplicationUser" hidden />
        <div class="form-group">
            <label asp-for="Id">Id</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Manufacturer">Manufacturer</label>
            <input asp-for="Manufacturer" class="form-control" />
            <span asp-validation-for="Manufacturer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Model">Model</label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
</form>