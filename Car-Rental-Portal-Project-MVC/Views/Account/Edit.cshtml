@using Car_Rental_Portal_Project_MVC.Models.ViewModels.Account;
@model ProfileViewModel

<h1 class="text-info"> Edit User</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Account" asp-action="Edit" class="form-control FFdiv" method="post" class="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="form-group col-md-6">
@*                    <input asp-for="Username" class="col-md-6" hidden />*@
                    <input asp-for="ApplicationCars" class="col-md-6" hidden />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control"/>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PhoneNumber">PhoneNumber</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="form-group mt-3 col-md-12">
                    <button type="submit" class="btn btn-success form-control">UPDATE</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}