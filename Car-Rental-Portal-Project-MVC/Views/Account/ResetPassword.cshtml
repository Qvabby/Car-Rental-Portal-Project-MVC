@using Car_Rental_Portal_Project_MVC.Models.ViewModels.Account;
@model ResetPasswordViewModel
<h1 class="text-info">Reset Password</h1>
<form asp-controller="Account" asp-action="ResetPassword" method="post" role="form" class="form">
    <h4>Reset Account Password</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Code" hidden />
    <input asp-for="UserId" hidden />
    <div class="form-group row">
        <label asp-for="Password" class="col-md-2 mt-3"></label>
        <div class="col-md-10 ">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="Text-danger"></span>
        </div>
        <label asp-for="ConfirmedPassword" class="col-md-2 mt-3"></label>
        <div class="col-md-10 ">
            <input asp-for="ConfirmedPassword" class="form-control" />
            <span asp-validation-for="ConfirmedPassword" class="Text-danger"></span>
        </div>

    </div>

    <div class="form-group mt-2">
        <div class="col-md-2">
            <button type="submit" class="btn btn-danger form-control">Reset</button>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}